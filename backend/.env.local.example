# Backend Environment Variables
# Copy this file to .env.local (or .env) and update with your local values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rozvrhovac

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-use-a-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Rozvrhovac

# Development Configuration
# Set to 'true' to enable debug mode
DEBUG=false

# Logging
LOG_LEVEL=INFO
